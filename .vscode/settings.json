{
    // ========================================
    // PYTHON INTERPRETER & ENVIRONMENT
    // ========================================
    "python.defaultInterpreterPath": "python",
    "python.terminal.activateEnvironment": true,
    // ========================================
    // FORMATTING (BLACK)
    // ========================================
    "python.formatting.provider": "none",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "black-formatter.args": [
        "--line-length=88",
        "--skip-string-normalization"
    ],
    // ========================================
    // LINTING & TYPE CHECKING
    // ========================================
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.banditEnabled": false,
    // Pylint configuración
    "python.linting.pylintArgs": [
        "--disable=C0114,C0115,C0116", // Deshabilita docstring warnings para aprendizaje
        "--max-line-length=88"
    ],
    // MyPy configuración
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--strict-optional",
        "--warn-redundant-casts"
    ],
    // ========================================
    // ANÁLISIS DE CÓDIGO (PYLANCE)
    // ========================================
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "./typings",
    // ========================================
    // EDITOR GENERAL
    // ========================================
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll.pylint": "explicit"
    },
    "editor.rulers": [
        88
    ], // Línea guía a 88 caracteres
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // ========================================
    // PYTHON ESPECÍFICO
    // ========================================
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    // IntelliSense
    "python.autoComplete.addBrackets": true,
    "python.showStartPage": false,
    // ========================================
    // TERMINAL & DEBUGGING
    // ========================================
    "python.terminal.executeInFileDir": false,
    "python.terminal.launchArgs": [],
    // ========================================
    // ARCHIVOS & WORKSPACE
    // ========================================
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true
    },
    // ========================================
    // LIVE PREVIEW (OPCIONAL)
    // ========================================
    "python.linting.lintOnSave": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    // ========================================
    // INTELLISENSE & AUTOCOMPLETADO
    // ========================================
    "editor.suggest.insertMode": "replace",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.tabCompletion": "on",
}
